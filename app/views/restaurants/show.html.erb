<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<h2>Reviews:</h2>
<% @restaurant.reviews.each do |review| %>
  <p><%= review.content %>.</p>
  <p><strong>Rating:</strong><%= review.rating %> ⭐️</p>
  <%= link_to "Delete this review", review_path(review), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end %>

<div>
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant), class: "btn btn-primary" %> |
  <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-primary" %> |
  <%= link_to "Leave a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %> |
  <%= link_to "Destroy this restaurant", @restaurant, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary" %>
</div>
